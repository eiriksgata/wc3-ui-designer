{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "enables the default permissions",
  "windows": [
    "main"
  ],
  "permissions": [
    "core:default",
    "dialog:allow-open",
    "dialog:allow-save",
    "dialog:allow-confirm",
    "dialog:default",
    "fs:default",
    "fs:allow-read-file",
    "fs:allow-write-file",
    "fs:allow-read-text-file",
    "fs:allow-write-text-file",
    "fs:allow-copy-file",
    {
      "identifier": "fs:scope",
      "allow": [
        {
          "path": "$DESKTOP/**"
        },
        {
          "path": "$DOCUMENT/**"
        },
        {
          "path": "$DOWNLOAD/**"
        },
        {
          "path": "$HOME/**"
        }
      ]
    }
  ]
}